 .btn-icon
   &before
     content "图"

.ui-widget
  height 510px
  width 700px
  border-radius 5px
  background #ffffff
  position absolute
  top 50%
  left 50%
  margin-top -255px
  margin-left -350px
  box-shadow #ececec 0px 0px 7px
.ui-widget-header
  margin 0 50px
  height 60px
  border-bottom #e6e7eb 2px solid
  font normal 18px/60px "微软雅黑"
  color #ff5141
.ui-widget-content
  margin 0 15px 0 50px
  height 345px
  padding 20px 15px 0 0
  overflow auto
.ui-news-header
  height 40px
  line-height 40px
  zoom 1
.ui-news-tab
  li
    float left
    width 150px
    height 100%
    background #eeeeee
    text-align center
    font-size 14px
    color #5e6166
    font-weight bold
    cursor pointer
.ui-news-tab
  li.active
    background #419dff
    color #ffffff
.ui-news-btn
  font-size 12px
  color #525459
  margin-left 122px
.ui-news-btn
  a
    color #525459
    padding 0 7px
.ui-news-list
  font normal 12px/20px "微软雅黑"
.ui-news-list
  i
    font-style normal
    margin-right 7px
    color #5e6166
.ui-news-list
  dl
    padding 10px 0
    border-bottom 1px solid #fafafa
    width 600px
.ui-news-list
  dl
    &last-child
      border none
.ui-news-list
  dt
    color #6bdc60
.ui-news-list
  dd
    margin-left 15px
    color #5e6166
.hide
  display none
.ui-widget-close
  height 32px
  width 32px
  border 2px solid #8a8f99
  border-radius 18px
  font normal 30px/32px icon
  text-align center
  position absolute
  top 12px
  right 10px
  color #8a8f99
.ui-news-warning
  dt
    color #fe4444